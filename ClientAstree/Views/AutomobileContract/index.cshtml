@model IEnumerable<ClientAstree.Models.AutomobileVM>

@{
    ViewData["Title"] = "Automobile Contracts";
}

<h2>Automobile Contracts</h2>

<table class="table">
    <thead>
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>Vehicle Type</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Quota</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.VehicleMake</td>
                <td>@item.Model</td>
                <td>@item.VehicleType</td>
                <td>@item.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@item.EndDate.ToString("yyyy-MM-dd")</td>
                <td>@item.Quota</td>
                <td>
                    <!-- Update the href to link to the Edit action method, passing the ID of the current item -->
                    <a href="@Url.Action("Update", "AutomobileContract", new { id = item.Id })" class="btn btn-primary">Edit</a>
                    <form asp-action="Delete" asp-controller="AutomobileContract" method="post" onsubmit="return confirm('Are you sure you want to delete this automobile?');">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
