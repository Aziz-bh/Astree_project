@model ClientAstree.Services.Base.ComplaintDto

<h2>Edit Complaint</h2>
<form asp-action="Edit" asp-controller="Complaints" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ComplaintsSubject">Subject</label>
        <input asp-for="ComplaintsSubject" class="form-control" />
        <span asp-validation-for="ComplaintsSubject" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Attachment">New Attachment</label>
        <input asp-for="Attachment" type="file" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
