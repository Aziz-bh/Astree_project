@model IEnumerable<ClientAstree.Models.ComplaintVM>

<h2>My Complaints</h2>
<table class="table">
    <thead>
        <tr>
            <th>Subject</th>
            <th>Description</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ComplaintsSubject</td>
            <td>@item.Description</td>
            <td>@item.ComplaintState</td>
            <td>
                <a href="@Url.Action("EditComplaint", "Complaints", new { id = item.Id })" class="btn btn-primary">Edit</a>
                <a href="@Url.Action("Delete", "Complaints", new { id = item.Id })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this complaint?');">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
