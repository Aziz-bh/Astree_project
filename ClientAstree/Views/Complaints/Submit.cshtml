@model ClientAstree.Models.ComplaintDtoSubmit

<h2>Submit Complaint</h2>
<form asp-action="Submit" asp-controller="Complaints" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ComplaintsSubject">Subject</label>
        <input asp-for="ComplaintsSubject" class="form-control" />
        <span asp-validation-for="ComplaintsSubject" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Attachment">Attachment</label>
        <input asp-for="Attachment" type="file" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
