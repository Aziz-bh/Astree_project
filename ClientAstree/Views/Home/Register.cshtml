@{
    ViewData["Title"] = "Privacy Policy";
}
<div class="text-center">
    <div class="page-header header-filter my-0" filter-color="blue">
        <div class="page-header-image" style="background-image:url(/img/fam1.png)"></div>
        <div class="content">
            <div class="container d-flex justify-content-center align-items-center ">
                <div class="col-md-8 mr-auto">
                    <div class="card card-signup">
                        <div class="card-body">
                                                          <div class="progress-container progress-primary">
  <span class="progress-badge text-center">Register</span>
  <div class="progress">
    <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
      <span class="progress-value">0%</span>
    </div>
  </div>
</div>
                            <form id="registrationForm">
                                <!-- Section 1 -->
                                <div class="form-section">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="First Name..." autocomplete="fullname" required>
                                    </div>
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Last Name..." autocomplete="name" required>
                                    </div>
                                    <div class="input-group">
                                        <input type="email" class="form-control" placeholder="Your Email..." autocomplete="email" required>
                                    </div>
                                    <button type="button" class="next-btn btn btn-primary">Next</button>
                                </div>
                                <!-- Section 2 -->
                                <div class="form-section" style="display:none">
                                    <div class="input-group">
                                        <input type="password" class="form-control" placeholder="Password..." autocomplete="new-password" required>
                                    </div>
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="CIN..." autocomplete="off" required>
                                    </div>
                                    <div class="input-group">
                                        <input type="tel" class="form-control" placeholder="Your Phone Number..." autocomplete="tel" required>
                                    </div>
                                    <button type="button" class="next-btn btn btn-primary">Next</button>
                                </div>
                                <!-- Section 3 -->
                                <div class="form-section" style="display:none">
                                    <div class="input-group">
                                        <input type="date" class="form-control" placeholder="Birth Date..." autocomplete="bday" required>
                                    </div>
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Nationality..." autocomplete="off" required>
                                    </div>
                                    <div class="input-group">
                                        <select class="form-control" required>
                                            <option value="">Select Civility...</option>
                                            <!-- Populate options here -->
                                        </select>
                                    </div>
                                    <div class="input-group">
                                        <select class="form-control" required>
                                            <option value="">Select Gender...</option>
                                            <!-- Populate options here -->
                                        </select>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    var form = document.getElementById('registrationForm');
    var sections = document.querySelectorAll('.form-section');
    var currentSectionIndex = 0;

    function showSection(index) {
        sections.forEach((section, i) => {
            section.style.display = i === index ? 'block' : 'none';
        });
        currentSectionIndex = index;
    }

    form.addEventListener('click', function(e) {
        if (!e.target.classList.contains('next-btn') && e.target.type !== 'submit') return;

        var inputs = sections[currentSectionIndex].querySelectorAll('input, select');
        var isValid = Array.from(inputs).every(input => input.checkValidity());

        if (!isValid) {
            e.preventDefault(); // Prevent moving to the next section or submitting
            // Optionally, display error messages or highlight invalid fields
            inputs.forEach(input => {
                if (!input.checkValidity()) {
                    input.classList.add('is-invalid'); // Add error class for styling
                }
            });
            return;
        }

        // Optionally, remove error styling if present
        inputs.forEach(input => input.classList.remove('is-invalid'));

        if (e.target.classList.contains('next-btn')) {
            e.preventDefault(); // Prevent default button action
            showSection(currentSectionIndex + 1);
        }

        // No need to handle submit button here; form will submit if all fields are valid
    });

    // Initially show the first section
    showSection(0);
});
</script>
