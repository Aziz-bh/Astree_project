@model ClientAstree.Models.PropertyVM

@{
    ViewData["Title"] = "Property Contract";
}

<style>
    .bg-image {
        background-image: url('/img/fam1.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh;
    }

    .content-container {
        background-color: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 20px auto;
        max-width: 80%;
    }

    h2 {
        color: #212529;
        font-size: 1.5rem;
        font-weight: 500;
        text-align: center;
        margin-top: 20px;
    }

    .card {
        background-color: #fff;
        margin-bottom: 20px;
        padding: 25px;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 500;
    }

    .card-text {
        font-size: 1rem;
        color: #343a40;
    }

    .btn {
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

    .btn:hover {
        filter: brightness(95%);
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
    }

    .modal-content {
        background-color: rgba(255, 255, 255, 0.9);
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .modal-footer {
        display: flex;
        justify-content: space-between;
    }

    hr {
        border-top: 1px solid #f8f9fa;
        margin-top: 1rem;
        margin-bottom: 1rem;
    }
</style>

<div class="container-fluid bg-image">
    <div class="row">
        <div class="col-lg-2 col-md-3 col-sm-4 py-0 my-0 px-0 mx-0">
            @Html.Partial("_SideMenu")
        </div>

        <div class="col-lg-10 col-md-9 col-sm-8">
            <div class="content-container">
                <h2>@ViewData["Title"]</h2>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Property Contract Details</h5>
                        <p class="card-text">
                            <strong>Location:</strong> @Model.Location <br />
                            <strong>Property Value:</strong> @Model.PropertyValue <br />
                            <strong>Type:</strong> @Model.Type <br />
                            <strong>Year of Construction:</strong> @Model.YearOfConstruction.ToString("dd-MM-yyyy") <br />
                            <strong>Start Date:</strong> @Model.StartDate.ToString("dd-MM-yyyy") <br />
                            <strong>End Date:</strong> @Model.EndDate.ToString("dd-MM-yyyy") <br />
                            <strong>Coverage:</strong> @Model.Coverage <br />
                            <strong>Quota:</strong> @Model.Quota
                        </p>
                        <hr />

                        @foreach (var claim in User.Claims)
                        {
                            @if(claim.Type == "role")
                            {
                                @if(claim.Value == "Admin")
                                {
                                    if ((bool)ViewBag.Validated)
                                    {
                                        <form action="@Url.Action("UnvalidatePropertyContract", "PropertyContract", new { id = Model.Id })" method="post" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-warning">Invalidate Contract</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form action="@Url.Action("ValidatePropertyContract", "PropertyContract", new { id = Model.Id })" method="post" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-success">Validate Contract</button>
                                        </form>
                                    }
                                }
                                else
                                {
                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#signContractModal">
                                        <i class="fas fa-clipboard-check"></i> Sign Contract
                                    </button>
                                }
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="signContractModal" tabindex="-1" role="dialog" aria-labelledby="signContractModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="signContractModalLabel">Sign Contract</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>If you want to sign this contract, please provide the following documents:</p>
                <ul>
                    <li><i class="fas fa-id-card"></i> La pièce d'identité du souscripteur (CIN / passeport).</li>
                    <li><i class="fas fa-car"></i> La carte grise du véhicule.</li>
                    <li><i class="fas fa-certificate"></i> La visite technique et la vignette.</li>
                    <li><i class="fas fa-id-badge"></i> Le permis de conduire de l'assuré.</li>
                    <li><i class="fas fa-file-alt"></i> Le relevé d'informations (justificatif de la dernière classe Bonus-Malus de l'assuré).</li>
                    <li><i class="fas fa-file-contract"></i> L'attestation de leasing.</li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <a href="@Url.Action("DownloadPdf", "PropertyContract", new { id = Model.Id })" class="btn btn-primary">Download PDF</a>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
