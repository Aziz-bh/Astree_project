@model IEnumerable<ClientAstree.Models.PropertyVM>

@{
    ViewData["Title"] = "Property Contracts";
}

<h2>Property Contracts</h2>

<table class="table">
    <thead>
        <tr>
            <th>Location</th>
            <th>Type</th>
            <th>Value</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Location</td>
                <td>@item.Type</td>
                <td>@item.PropertyValue</td>
                <td>@item.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@item.EndDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a href="@Url.Action("Update", "PropertyContract", new { id = item.Id })" class="btn btn-primary">Edit</a> |
                    <form asp-action="Delete" asp-controller="PropertyContract" method="post" onsubmit="return confirm('Are you sure you want to delete this property?');">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
