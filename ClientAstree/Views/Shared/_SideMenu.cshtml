<style>
/* Main side menu container */
.side-menu {
    position: sticky;
    top: 0;
    background-color: #f8f9fa;
    padding: 15px;
    height: 100vh;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

/* User info section */
.side-menu .user-info {
    padding: 20px 0;
    border-bottom: 1px solid #ddd;
    text-align: center;
}

.side-menu .user-info .simple-text {
    font-size: 1.2em;
    font-weight: bold;
    color: #FFFF;
}

.side-menu .user-info .user-name {
    font-size: 1.1em;
    font-weight: bold;
    color: #6c757d;
}

/* Navigation menu */
.side-menu .nav {
    padding-top: 15px;
}

.side-menu .nav-item {
    padding: 10px 0;
}

.side-menu .nav-link {
    color: #333;
    display: flex;
    align-items: center;
    transition: background-color 0.3s ease, color 0.3s ease;
}

.side-menu .nav-link i {
    margin-right: 10px;
    color: #FFFF;
}

.side-menu .nav-link p {
    margin: 0;
    font-size: 1em;
}

.side-menu .nav-link:hover {
    background-color: #e9ecef;
    color: #FFFF;
}

.side-menu .nav-link:hover i {
    color: #0056b3;
}

/* Footer links */
.side-menu .footer-link {
    color: #333;
    transition: color 0.3s ease;
    padding: 0 5px;
}

.side-menu .footer-link:hover {
    color: #0056b3;
    text-decoration: underline;
}
</style>
<div id="side-menu" class="sidebar side-menu" data-color="blue">
    <div class="logo user-info">
        @if (User.Identity.IsAuthenticated)
        {
            <span class="simple-text logo-mini">@User.Identity.Name</span>
            @foreach (var claim in User.Claims)
            {
                @if(claim.Type=="role")
                {
                    <div class="simple-text logo-normal">
                        <span>@claim.Type: </span>
                        <span>@claim.Value</span>
                    </div>
                }
            }
        }
        else
        {
            <span class="user-name">Guest</span>
        }
    </div>

    <div class="sidebar-wrapper" id="sidebar-wrapper">
        <ul class="nav nav-pills-info flex-column">
            @foreach (var claim in User.Claims)
            {
                @if(claim.Type=="role")
                {
                    @if(claim.Value=="Member")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="Profile">
                                <i class="fas fa-user"></i>
                                <p>Profile</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="MyContract">
                                <i class="fas fa-file-contract"></i>
                                <p>My Contracts</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="Mydues">
                                <i class="fas fa-money-bill"></i>
                                <p>My dues</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Complaints" asp-action="MyComplaints">
                                <i class="fas fa-exclamation-circle"></i>
                                <p>My Claims</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Chat" asp-action="AdminChatRoom">
                                <i class="fas fa-comments"></i>
                                <p>Chat with Admin</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-building"></i>
                                <p>Agencies</p>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="Dashboard">
                                <i class="fas fa-tachometer-alt"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="Index">
                                <i class="fas fa-users"></i>
                                <p>Users</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="AdminAutomobile">
                                <i class="fas fa-car"></i>
                                <p>Automobile</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="User" asp-action="AdminPropertyManagement">
                                <i class="fas fa-home"></i>
                                <p>Property</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Complaints" asp-action="Index">
                                <i class="fas fa-exclamation-circle"></i>
                                <p>View Complaints</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Complaints" asp-action="Admin">
                                <i class="fas fa-cogs"></i>
                                <p>Manage Complaints</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Chat" asp-action="Index">
                                <i class="fas fa-comments"></i>
                                <p>Chat Rooms</p>
                            </a>
                        </li>
                    }
                }
            }
        </ul>
    </div>
</div>


