@model ClientAstree.Models.DashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    .bg-image {
        background-image: url('/img/fam1.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh; /* Ensures it covers the full height of the viewport */
    }

    .content-container {
        background-color: rgba(255, 255, 255, 0.8); /* White with 80% opacity */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 20px auto;
    }

    .card {
        margin-bottom: 20px;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .card-text {
        font-size: 1rem;
    }

    .card-img-top {
        width: 100px;
        height: auto;
        display: block;
        margin-left: auto;
        margin-right: auto;
        padding-top: 10px;
    }

    .card-body {
        text-align: center;
    }
</style>

<div class="container-fluid bg-image">
    <div class="row">
        <!-- Side Menu on the left -->
        <div class="col-lg-2 col-md-3 col-sm-4 py-0 my-0 px-0 mx-0">
            @Html.Partial("_SideMenu")
        </div>

        <div class="col-lg-10 col-md-9 col-sm-8">
            <div class="content-container">
                <div class="row">
                    <div class="col-md-3">
                        <div class="card" style="width: 100%;">
                            <img class="card-img-top" src="/img/car-logo.png" alt="Car Logo">
                            <div class="card-body">
                                <h4 class="card-title">Automobile Contracts</h4>
                                <p class="card-text">You have @Model.AutomobileContractsCount automobile contracts.</p>
                                <a href="/AutomobileContract/Index" class="btn btn-primary">View Contracts</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="card" style="width: 100%;">
                            <img class="card-img-top" src="/img/house-logo.png" alt="House Logo">
                            <div class="card-body">
                                <h4 class="card-title">Property Contracts</h4>
                                <p class="card-text">You have @Model.PropertyContractsCount property contracts.</p>
                                <a href="/PropertyContract/Index" class="btn btn-primary">View Contracts</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="card" style="width: 100%;">
                            <img class="card-img-top" src="/img/user-logo.png" alt="User Logo">
                            <div class="card-body">
                                <h4 class="card-title">Users</h4>
                                <p class="card-text">You have @Model.UsersCount users.</p>
                                <a href="/Users/Index" class="btn btn-primary">View Users</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="card" style="width: 100%;">
                            <img class="card-img-top" src="/img/complaint-logo.png" alt="Complaint Logo">
                            <div class="card-body">
                                <h4 class="card-title">Complaints</h4>
                                <p class="card-text">You have @Model.ComplaintsCount complaints.</p>
                                <a href="/Complaints/Index" class="btn btn-primary">View Complaints</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
