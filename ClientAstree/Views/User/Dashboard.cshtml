@model ClientAstree.Models.DashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    body {
        font-family: 'Open Sans', sans-serif; /* Base font */
        background-color: #F2F2F2;
        color: #333333;
    }

    .bg-image {
        background-image: url('/img/fam1.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh; /* Ensures it covers the full height of the viewport */
    }

    .content-container {
        background-color: rgba(255, 255, 255, 0.8); /* White with 80% opacity */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 20px auto;
    }

    .card {
        margin-bottom: 20px;
        background-color: #1E3A7A; /* Set the background color of the card */
        color: white; /* Set the text color to white */
        border: none; /* Remove default border */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        transition: transform 0.2s, box-shadow 0.2s; /* Smooth transitions */
    }

    .card:hover {
        transform: translateY(-5px); /* Lift up slightly on hover */
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* More prominent shadow */
    }

    .card-title {
        font-family: 'Roboto', sans-serif;
        font-size: 1.5rem; /* Larger title */
        color: #FFFF; /* Gold color for highlights */
    }

    .card-text {
        font-size: 1rem; 
        color: white; /* Ensure the card text is white */
    }

    .card-img-top {
        width: 100px;
        height: auto;
        display: block;
        margin-left: auto;
        margin-right: auto;
        padding-top: 10px;
    }

    .card-body {
        text-align: center;
    }

    .btn-primary {
        background-color: #FFFF; /* Gold for highlights */
        color: #1E3A7A; /* Set the button text color to match the card background */
        border: none; /* Remove the button border */
    }

    .btn-primary:hover {
        background-color: #4E6B8B; /* Lighten the button background on hover */
        color: #1E3A7A; /* Keep the button text color the same */
    }
</style>

<div class="container-fluid bg-image">
    <div class="row">
        <!-- Side Menu on the left -->
        <div class="col-lg-2 col-md-3 col-sm-4 py-0 my-0 px-0 mx-0">
            @Html.Partial("_SideMenu")
        </div>

        <div class="col-lg-10 col-md-9 col-sm-8">
            <div class="content-container">
                <div class="row">
                    <div class="col-md-3">
                        <div class="card" style="width: 100%;">
                            <img class="card-img-top" src="/img/dashboard/cardash.png" alt="Car Logo">
                            <div class="card-body">
                                <h4 class="card-title">Automobile Contracts</h4>
                                <p class="card-text">@Model.AutomobileContractsCount automobile contracts.</p>
                                <a href="/AutomobileContract/Index" class="btn btn-primary">View Contracts</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="card" style="width: 100%;">
                            <img class="card-img-top" src="/img/dashboard/houseDash.png" alt="House Logo">
                            <div class="card-body">
                                <h4 class="card-title">Property Contracts</h4>
                                <p class="card-text">@Model.PropertyContractsCount property contracts.</p>
                                <a href="/PropertyContract/Index" class="btn btn-primary">View Contracts</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="card" style="width: 100%;">
                            <img class="card-img-top" src="/img/dashboard/userDash.png" alt="User Logo">
                            <div class="card-body">
                                <h4 class="card-title">Users</h4>
                                <p class="card-text">@Model.UsersCount users.</p>
                                <a href="/User" class="btn btn-primary">View Users</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="card" style="width: 100%;">
                            <img class="card-img-top" src="/img/dashboard/complaintDash.png" alt="Complaint Logo">
                            <div class="card-body">
                                <h4 class="card-title">Complaints</h4>
                                <p class="card-text">@Model.ComplaintsCount complaints.</p>
                                <a href="/Complaints/Index" class="btn btn-primary">View Complaints</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
